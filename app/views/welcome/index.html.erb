<table class="table table-striped table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-3">Chuchería</th>
            <th class="col-md-3">Calorías</th>
            <th class="col-md-3">Actividad</th>
        </tr>
    </thead>

    <tbody>
        <% @tuples.each do |tuple| %>
            <tr class="row">
                <td class="col-md-3"><%= link_to tuple[:name], tuple[:snack] %></td>
                <td class="col-md-3"><%= tuple[:calories] %></td>
                <td class="col-md-3"><%= tuple[:activity] %> <%= tuple[:quantity] %> <%= tuple[:unit] %></td>
            </tr>
        <% end %>
    </tbody>
</table>
