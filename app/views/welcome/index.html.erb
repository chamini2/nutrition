<h1>Index</h1>

<table>
  <thead>
    <tr>
      <th>Snack</th>
      <th>Calories</th>
      <th>Activity</th>
    </tr>
  </thead>

  <tbody>
    <% @pairs.each do |pair| %>
      <tr>
        <td><%= pair[:snack] %></td>
        <td><%= pair[:calories] %></td>
        <td><%= pair[:activity] %> <%= pair[:quantity] %> <%= pair[:unit] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> <%= link_to 'New Activity', new_activity_path %>
<br> <%= link_to 'New Snack', new_snack_path %>
